

<link rel="stylesheet" href="products_controller.css">

<p id="notice"><%= notice %></p>


<!-- ******************************************************** STYLING BEGGINING  -->

<div class="body-class">                         <!-- body class div start -->

<div class="products-nav">                               <!-- start of nav  -->
  <div>
    <h2>Listing products
      <%= form_tag(products_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "" %>
      <%= submit_tag "Search", :name => nil %>
      <% end %>
    </h2>
  </div>
</div>                                                    <!-- end of nav  -->



<div class="jon-wrapper">                       <!--jon-wrapper start  -->
      <% if @products.none? %> <!-- IF ELSE BEGIN  -->
        <p>There are no products containing the term <b> <%= params[:search] %></b> .</p>
      <% else %>
      <% @products.each do |product| %>

            <div>

             <%= image_tag product.image, height: 200, width:200 %>
             <p>PRODUCT NAME:
                <%=product.name %>
             </p>
             <p>PRODUCT PRICE:
               $<%= product.formatted_price%>
             </p>
             <p>PRODUCT DESCRIPTION:
               <%= product.description %>
             </p>
             <%= form_for @order_item do |f| %>
             <%= f.hidden_field :quantity, value: 1 %>
             <%= f.hidden_field :product_id, value: product.id %>
             <%= f.submit "Add to cart" %>
             <% end %>
             <%= link_to 'View Product', product %>

           </div>



                <% end %>
            <% end %>  <!-- IF ELSE END  -->

    </div>                             <!--jon-wrapper end  -->

</div>                              <!-- body class div end -->



<!-- ******************************************************** STYLING END  -->






