<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>

    <%= csrf_meta_tags %>

  </head>
    <body>

      <%= yield %> <!-- All other views in app proccesses through <%= yield %> -->


        <div class="header">
            <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
            <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

            <% if current_user %>
            Welcome <%= current_user.name %> | <%= link_to "logout", '/logout' %>
            <% else %>
            <%= link_to "Login", '/login' %> | <%= link_to "Sign-up", '/signup' %>
            <% end %>

            <%= form_tag(products_path, :method => "get", id: "search-form") do %>
                <%= text_field_tag :search, params[:search], placeholder: "" %>
                <%= submit_tag "Search", :name => nil %>

            <% end %>
        </div>




  </body>
</html>
