<!DOCTYPE html>
<html>
<head>
    <title>Rainforest</title>

    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
<body>

    <div class="header">


      <%= form_tag(products_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "" , :class => 'comment_form' %>      <%= submit_tag "search", :name => nil , :class => 'submit_form'%>
      <% end %>

      <% if current_user %>
      Welcome <%= current_user.name %> | <%= link_to "logout", '/logout' %>| <%= link_to "Go to cart", '/cart' %>| <%= link_to 'Add New Product', new_product_path %>
      <% else %>
      <%= link_to "Login", '/login' %> | <%= link_to "Sign-up", '/signup' %>
      <% end %>

      <span id="home_all"> <%= link_to 'Back to Amazonia.com', root_path %> | <%= link_to 'View All Products', products_path %></span>
    </div>

    <!-- <%= form_tag(products_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "" %>
        <%= submit_tag "Search", :name => nil %>
    <% end %> -->

    <%= yield %>

</body>
</html>
