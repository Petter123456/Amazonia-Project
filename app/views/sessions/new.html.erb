

<button id="back"><%= link_to 'Back to Amazonia.com', root_path %></button>




<div class="wrapper500">
  <div>
    <h1 id="id_sign_in">Sign In</h1></br>
    <%= form_tag '/login' do %>
      <p id="Email">Email</p>
        <%= text_field_tag :email, nil, class: 'special_input'%> </br></br>
      <p id="Password">Password</p>
      <%= password_field_tag :password %></br></br>
      <%= submit_tag "Login", class: 'submit_tag'%></br>

      <%= link_to "forgotten password?", new_password_reset_path %></br>
    <% end %>
      <%= label_tag :remember_me %>
      <%= check_box_tag :remember_me, 1, params[:remember_me] %></br>
      <%= link_to 'Sign Up!', '/signup' %></br>
    </div>
</div>
