  <body>



    <div class="body-class">              <!-- body class div start -->
    <div class="jon-nav">                       <!-- start of nav  -->
        <h1>Home#index</h1>
        <h1><%= link_to 'View All Products', products_path %></h1>
        <!-- <%= link_to 'View Products', products_path(@product) %> -->


                                      <!-- **********   REMOVE  *********  -->
         <p>Find me in app/views/home/index.html.erb</p>
