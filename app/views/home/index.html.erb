<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

    <title>

    </title>
    <link rel="stylesheet" href="/custom.scss">
  </head>
  <body>



    <div class="body-class">              <!-- body class div start -->
    <div class="jon-nav">                       <!-- start of
    </div>
                          <!-- end of nav  -->
    <div class="jon-wrapper jon-">        <!--jon-wrapper start  -->
          <% @products.each do | product|%>
            <div id="img_div">         <!--unknown div start  -->
                <h3><%= product.name %></h3>
                <%= image_tag product.image, height: 200, width:200 %>
                <!-- <%= product.description %> -->
                <h3>$<%= product.formatted_price %></h3>
                 <%= link_to 'View Product', product %>


                    <%= form_for @order_item do |f| %>
                      <%= f.hidden_field :quantity, value: 1 %>
                      <%= f.hidden_field :product_id, value: product.id %>
                      <%= f.submit "Add to cart" %>
                    <% end %>
            </div>                <!--unknown div end  -->
          <% end %>
    </div>            <!--jon-wrapper end  -->


</div>                  <!-- body class div end -->


  </body>
</html>
